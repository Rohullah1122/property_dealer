<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".house_details"
    android:background="@drawable/imgback"
    >


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/flhouse_details">
    </FrameLayout>



        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="معلومات خانه "
            app:layout_goneMarginTop="0dp"
            android:textColor="@color/white"
            android:textSize="40sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.497"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <LinearLayout
            android:id="@+id/linearLayout3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/housimge"
            app:layout_constraintVertical_bias="0.0"
            tools:layout_editor_absoluteX="16dp">


            <EditText
                android:id="@+id/txtrens"
                android:layout_width="190dp"
                android:layout_height="40dp"
                android:layout_marginLeft="10dp"
                android:width="1dp"
                android:background="@color/black"
                android:hint="قیمت"
                android:gravity="center"
                android:textColor="@color/white"
                android:textColorHint="@color/white"
                android:textSize="20sp"
                android:textStyle="bold" />


            <View
                android:layout_width="20dp"
                android:layout_height="10dp"

                />



            <EditText
                android:id="@+id/txtprovince"
                android:layout_width="190dp"
                android:layout_height="40dp"
                android:width="1dp"
                android:background="@color/black"
                android:textColorHint="@color/white"
                android:layout_marginRight="10dp"
                android:hint="ولایت"
                android:gravity="center"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:textStyle="bold" />


        </LinearLayout>


        <LinearLayout
            android:id="@+id/linearLayout6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="60dp"
            android:orientation="horizontal"
            app:layout_constraintTop_toTopOf="@+id/linearLayout3"
            tools:layout_editor_absoluteX="10dp">


            <EditText
                android:id="@+id/txtrooms"
                android:layout_width="190dp"
                android:layout_height="40dp"
                android:layout_marginLeft="10dp"
                android:width="1dp"
                android:background="@color/black"
                android:hint="اتاق ها"
                android:gravity="center"
                android:textColor="@color/white"
                android:textColorHint="@color/white"
                android:textSize="20sp"
                android:textStyle="bold" />


            <View
                android:layout_width="20dp"
                android:layout_height="10dp"

                />


            <EditText
                android:id="@+id/txttype"
                android:layout_width="190dp"
                android:layout_height="40dp"
                android:layout_marginRight="10dp"
                android:width="1dp"
                android:background="@color/black"
                android:hint="نوه"
                android:gravity="center"
                android:textColor="@color/white"
                android:textColorHint="@color/white"
                android:textSize="20sp"
                android:textStyle="bold" />


        </LinearLayout>



        <com.mikhaellopez.circularimageview.CircularImageView
            android:id="@+id/housimge"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_gravity="center"
            android:layout_marginTop="60dp"
            android:foregroundGravity="center"
            android:src="@drawable/ic_profile"
            app:civ_border="true"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.511"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.89" />


        <Button
            android:id="@+id/btn_contactowner"
            android:layout_width="258dp"
            android:layout_height="45dp"
            android:background="@color/lighblue"
            android:backgroundTint="@color/lighblue"
            android:drawableStart="@drawable/style"
            android:layout_marginTop="15dp"
            android:gravity="center"
            android:text="تماس باکارگر"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.562"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ly1"
            android:drawableLeft="@drawable/style" />

        <EditText
            android:id="@+id/txtloc"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="124dp"
            android:background="@color/black"
            android:gravity="center"
            android:hint="موقید"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textColorHint="@color/white"
            android:textSize="20sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout6"
            android:layout_marginLeft="16dp" />




        <EditText
            android:id="@+id/txtphonenumber"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginStart="12dp"
            android:layout_marginTop="8dp"
            android:background="@color/black"
            android:gravity="center"
            android:hint="شماره تماس"
            android:textColor="@color/white"
            android:textColorHint="@color/white"
            android:textSize="20sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txtloc"
            android:layout_marginLeft="12dp" />

        <EditText
            android:id="@+id/txtuserinfo"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginStart="12dp"
            android:layout_marginTop="4dp"
            android:background="@color/black"
            android:gravity="center"
            android:hint="معلو مات کاربر"
            android:textColorHint="@color/white"
            android:textSize="15sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txtphonenumber"
            android:layout_marginLeft="12dp" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintBottom_toTopOf="@+id/btn_contactowner"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:id="@+id/ly1"
            android:layout_marginTop="5dp"
            app:layout_constraintTop_toBottomOf="@+id/txtuserinfo"
            android:gravity="center"
            >


            <EditText
                android:id="@+id/homesize"
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="5dp"
                android:width="1dp"
                android:background="@color/black"
                android:hint="طول  خانه" />

            <EditText
                android:id="@+id/widthhome"
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:layout_marginLeft="6dp"
                android:layout_marginTop="5dp"
                android:width="1dp"
                android:background="@color/black"
                android:hint="هرز خانه" />

            <EditText
                android:id="@+id/numberkitchen"
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:layout_marginLeft="6dp"
                android:layout_marginTop="5dp"
                android:width="1dp"
                android:background="@color/black"
                android:hint="تهداد آشدز خانه" />


            <EditText
                android:id="@+id/numberwashroo"
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:layout_marginLeft="6dp"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:width="1dp"
                android:background="@color/black"
                android:hint="تهداد حمام" />


        </LinearLayout>


    <Button
        android:id="@+id/btnimg"
        android:layout_width="256dp"
        android:layout_height="48dp"
        android:text="عکسها ه"
        android:layout_marginTop="30dp"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/btn_contactowner"
        app:layout_constraintTop_toBottomOf="@+id/ly1" />


    <FrameLayout
        android:id="@+id/frmlayout33"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>