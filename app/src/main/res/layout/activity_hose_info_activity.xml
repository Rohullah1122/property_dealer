<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/img6"
    tools:context=".hose_info_activity">


    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="412dp"
        android:layout_height="275dp"
        android:layout_marginTop="205dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.219">

        <EditText
            android:id="@+id/houseprice"
            android:layout_width="330dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:background="@color/white"
            android:gravity="center"
            android:hint="قیمت خانه"
            android:textColorHint="@color/black"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold" />

        <Spinner
            android:id="@+id/spinnerhouse"
            android:layout_width="200dp"
            android:layout_height="30dp"
            android:layout_marginLeft="120dp"
            android:layout_marginTop="20dp"
            android:background="@color/white" />

        <EditText
            android:id="@+id/txtlocation"
            android:layout_width="330dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:textColorHint="@color/black"
            android:background="@color/white"
            android:gravity="center"
            android:hint="موقید"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/numberroom"
                android:layout_width="150dp"
                android:layout_height="30dp"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="10dp"
                android:textColor="@color/black"
                android:textColorHint="@color/black"
                android:width="1dp"
                android:background="@color/white"
                android:hint="تعداد اتاق" />


            <Spinner
                android:id="@+id/spinnersale_orrent"
                android:layout_width="150dp"
                android:layout_height="30dp"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="10dp"
                android:background="@color/white" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <EditText
                android:id="@+id/homesize"
                android:layout_width="80dp"
                android:layout_height="30dp"
                android:layout_marginLeft="50dp"
                android:textColor="@color/black"
                android:textColorHint="@color/black"
                android:layout_marginTop="10dp"
                android:width="1dp"
                android:background="@color/white"
                android:hint="طول  خانه" />

            <EditText
                android:id="@+id/widthhome"
                android:layout_width="80dp"
                android:layout_height="30dp"
                android:layout_marginLeft="6dp"
                android:textColor="@color/black"
                android:textColorHint="@color/black"
                android:layout_marginTop="10dp"
                android:width="1dp"
                android:background="@color/white"
                android:hint="هرز خانه" />

            <EditText
                android:id="@+id/numberkitchen"
                android:layout_width="80dp"
                android:layout_height="30dp"
                android:layout_marginLeft="6dp"
                android:textColor="@color/black"
                android:textColorHint="@color/black"
                android:layout_marginTop="10dp"
                android:width="1dp"
                android:background="@color/white"
                android:hint="تهداد آشدز خانه" />


            <EditText
                android:id="@+id/numberwashroo"
                android:layout_width="80dp"
                android:layout_height="30dp"
                android:layout_marginLeft="6dp"
                android:textColorHint="@color/black"
                android:layout_marginTop="10dp"
                android:width="1dp"
                android:textColor="@color/black"
                android:background="@color/white"
                android:hint="تهداد حمام" />


        </LinearLayout>


    </LinearLayout>

    <Button
        android:id="@+id/btnmoreimg"
        android:layout_width="207dp"
        android:layout_height="46dp"
        android:layout_marginBottom="40dp"
        android:text="عکس های خانه"
        android:textColorHint="@color/black"
        app:layout_constraintBottom_toTopOf="@+id/btn_upload"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.431"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout"
        app:layout_constraintVertical_bias="0.321" />

    <Button
        android:id="@+id/btn_upload"
        android:layout_width="207dp"
        android:layout_height="46dp"
        android:backgroundTint="@color/lighblue"
        android:text="درچ"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.462"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout"
        app:layout_constraintVertical_bias="0.505" />

    <com.mikhaellopez.circularimageview.CircularImageView
        android:id="@+id/houseprofile"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_gravity="center"
        android:layout_marginBottom="52dp"
        android:foregroundGravity="center"
        android:src="@drawable/hosesimpe"
        app:civ_border="true"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />


</androidx.constraintlayout.widget.ConstraintLayout>